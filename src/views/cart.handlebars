<div>
    <h1>Cart View</h1>
    <table>
        <thead>
            <tr>
                <th>id</th>
                <th>title</th>
                <th>description</th>
                <th>price</th>
                <th>thumbnails</th>
                <th>code</th>
                <th>stock</th>
                <th>category</th>
                <th>status</th>
                <th>qty</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
            {{#each cart.products}}
                <tr>
                    <td>{{this.id}}</td>
                    <td>{{this.title}}</td>
                    <td>{{this.description}}</td>
                    <td>{{this.price}}</td>
                    <td>
                        {{#if this.thumbnails.length}}
                            {{#each this.thumbnails}}
                                <img src="{{this}}" alt="thumbnail" style="width: 50px; height: 50px;">
                            {{/each}}
                        {{else}}
                            {{this.thumbnails}}
                        {{/if}}
                    </td>
                    <td>{{this.code}}</td>
                    <td>{{this.stock}}</td>
                    <td>{{this.category}}</td>
                    <td>
                        {{#if this.status}}
                            <span style="color: green;">Active</span>
                        {{else}}
                            <span style="color: red;">Inactive</span>
                        {{/if}}
                    </td>
                    <td>
                        {{this.qty}}
                    </td>
                    <td>
                        <button onclick="removeProductFromCart('{{this.id}}')">Remove</button>
                    </td>
                </tr>
            {{/each}}
        </tbody>
</div>